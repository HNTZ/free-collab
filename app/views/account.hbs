<h2>Mon compte</h2>
{{#each errors}}
<p class="alert alert-danger">{{this.msg}}</p>
{{/each}}
{{#if success}}
<p class="alert alert-success">{{success}}</p>
{{/if}}
<form action="account" method="post">
    <div class="form-group">
        <label for="username">Pseudo :</label>
        <input class="form-control" type="text" name="username" readonly value="{{user.username}}">
    </div>
    <div class="form-group">
        <label for="email">Email :</label>
        <input class="form-control" type="text" name="email" readonly value="{{user.email}}">
    </div>
    <div class="form-group">
        <label for="firstname">Prénom :</label>
        <input required="true" class="form-control" value="{{user.firstname}}" type="text" name="firstname"
            id="firstname" placeholder="Prénom">
    </div>
    <div class="form-group">
        <label for="lastname">Nom :</label>
        <input required="true" class="form-control" value="{{user.lastname}}" type="text" name="lastname" id="lastname"
            placeholder="Nom">
    </div>
    <div class="form-group">
        <label for="date_of_birth">Date de naissance :</label>
        <input required="true" class="form-control" value="{{dob}}" type="date" name="date_of_birth" id="date_of_birth">
    </div>
    <div class="form-group">
        <label>Competences :</label>
        {{#each skillCategories}}
            <p>{{this.name}}</p>
            {{#each skills}}
            <div class="form-check">
                <input type="checkbox" name="skills" id="{{name}}" value={{_id}} class="form-check-input" checked="false">
                <label for="{{name}}" class="form-check-label">{{name}}</label>
            </div>
            {{/each}}
            </ul>
        {{/each}}
    </div>
    <div class="form-group">
        <label for="password">Mot de passe :</label>
        <input required="true" class="form-control" type="password" name="password" id="password">
    </div>
    <button class="btn btn-primary" type="submit">Mettre à jour </button>
</form>