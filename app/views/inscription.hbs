
<div class="container col-6 p-1">
    <br>
    <br>
    <h2 class="d-flex flex-row justify-content-center">Inscription</h2>
    <br>
    <br>
    {{#each errors}}
    <p class="alert alert-danger">{{this.msg}}</p>
    {{/each}}
    <form action="/auth/inscription" method="post">
        <div class="form-group">
            <label for="username">Pseudo :</label>
            <input required="true" class="form-control" value="{{username}}" type="text" name="username" id="username"
                placeholder="Pseudo">
        </div>
        <div class="form-group">
            <label for="email">Email :</label>
            <input required="true" class="form-control" value="{{email}}" type="text" name="email" id="email"
                placeholder="Email">
        </div>
        <div class="form-group">
            <label for="firstname">Prénom :</label>
            <input required="true" class="form-control" value="{{firstname}}" type="text" name="firstname" id="firstname"
                placeholder="Prénom">
        </div>
        <div class="form-group">
            <label for="lastname">Nom :</label>
            <input required="true" class="form-control" value="{{lastname}}" type="text" name="lastname" id="lastname"
                placeholder="Nom">
        </div>
        <div class="form-group">
            <label for="date_of_birth">Date de naissance :</label>
            <input required="true" class="form-control" value="{{date_of_birth}}" type="date" name="date_of_birth"
                id="date_of_birth">
        </div>
        <div class="form-group">
            <label for="password">Mot de passe :</label>
            <input required="true" class="form-control" value="{{password}}" type="password" name="password" id="password">
        </div>
        <div class="form-group">
            <label>Competences :</label>
            {{#each skillCategories}}
            <p>{{this.name}}</p>
            {{#each skills}}
            {{#if name}}
            <div class="form-check">
                <input type="checkbox" name="skills" id="{{name}}" value={{_id}} class="form-check-input">
                <label for="{{name}}" class="form-check-label">{{name}}</label>
            </div>
            {{/if}}
            {{/each}}
            </ul>
            {{/each}}
        </div>
        <br>
        <button class="btn btn-primary d-flex justify-content-center m-auto" type="submit">Envoyer</button>
    </form>
</div>
