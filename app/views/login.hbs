<div class="container">
    <h2 class="d-flex flex-row justify-content-center">Connexion</h2>
    
    {{#if error}}
    <p class="alert alert-danger">{{error}}</p>
    {{/if}}
    <form action="/auth/login" method="post">
        <div class="form-group">
            <label for="username">Identifiant :</label>
            <input class="form-control" type="text" name="username" id="username" placeholder="mail ou pseudo">
        </div>
        <div class="form-group">
            <label for="password">Mot de passe :</label>
            <input class="form-control" type="password" name="password" id="password">
        </div>
        <button class="btn btn-primary  d-flex flex-row justify-content-center" type="submit">Envoyer</button>
    </form>
</div>