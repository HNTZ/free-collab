<form action="" method="GET" class="container-fluid">

    <div class="container" style="margin-top: 1%">

        <div class="row">

            <!-- FILTRES -->

            <div class="col-3 border border-secondary rounded p-3 mr-3 d-flex mb-auto flex-column">

                <div class="d-flex justify-content-center">
                    <h4>Cat√©gories</h3>
                </div>

                <div class="m-2 d-flex flex-column font-weight-bold">
                        <div class="mb-2">
                            <input {{#equals null ../cat}} checked {{/equals}} type="radio" id="vide" value="" name="cat">
                            <label for="vide">Toutes</label>
                        </div>
                        {{#each projectCategories}}
                        <div class="mb-2">
                            <input {{#equals _id ../cat}} checked {{/equals}} type="radio" id="{{name}}" value="{{_id}}" name="cat">
                            <label for="{{name}}">{{name}}</label>
                        </div>
                        {{/each}}
                        <input type="submit" value="Valider" class="btn btn-outline-danger mt-2 mx-auto">
                </div>

            </div>
            <div class="col-6">

                <input type="search" name="query" value="{{query}}" placeholder="üîé Recherche..." class="w-100" id="recherche">

                <p class="font-weight-bold" style="margin-top: 2%; font-size: 1.2em">{{count}} r√©sultat(s) pour votre recherche.</p>

                <hr class="border border-dark" />
                <!-- RESULTATS RECHERCHE -->
                {{#if projects}}
                <div class="container">
                    {{#each projects}}

                    <div class="row rounded border p-2 mb-3 pb-3">
                        <div class="col">
                            <p class="font-weight-bold">{{name}}</p>
                            <p>{{category}}</p>
                            <div class="float-right">

                                <a href="/projets/{{_id}}"><input class="btn btn-danger" type="button"
                                        value="Voir le projet"></a>
                            </div>
                        </div>
                    </div>



                    {{/each}}
                </div>
                {{else}}
                <p>Aucun projet ne correspond √† votre recherche.</p>
                {{/if}}

            </div>

        </div>


    </div>

</form>

